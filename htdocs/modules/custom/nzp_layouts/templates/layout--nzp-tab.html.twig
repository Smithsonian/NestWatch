{#
/**
 * @file
 * NZP Tabbed Theme interface
 *
 * This template provides a tab interface
 * the top, bottom and in the middle.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% set tabIndex = settings.num_tabs %}

{{kint(settings)}}
<div class="tab-wrapper">
 <ul data-tabs="{{settings.uuid}}">
            <li>
                <a data-tabby-default href="#tab-{{settings.uuid}}-0">{{ settings.tab_title.tab[0]}}</a>
            </li>
    {% for index in range(1, tabIndex-1) %}
            <li>
                <a href="#tab-{{settings.uuid}}-{{index}}">{{ settings.tab_title.tab[index]}}</a>
            </li>
   {% endfor %}
     </ul>
     {% for index in range(0, tabIndex-1) %}
        <div id="tab-{{settings.uuid}}-{{index}}">
            {{ attribute(content, 'tab_content_' ~ index) }}
        </div>
    {% endfor %}
</div>